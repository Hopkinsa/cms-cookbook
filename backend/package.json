{
  "name": "cms-cookbook-backend",
  "version": "1.0.0",
  "description": "Content management system cookbook - Backend",
  "license": "ISC",
  "author": "Andy Hopkins",
  "type": "module",
  "scripts": {
    "start": "nodemon --config nodemon.json",
    "style": "prettier 'src/**/*.{ts, json}' --write",
    "lint": "npx eslint",
    "test": "jest",
    "test:report": "jest --coverage",
    "deploy": "mkdir -p ../deployment/www/ ../deployment/images/ && cp -R ../helper/* ../deployment/ && cp -R images/* ../deployment/images/ && cp -R src/* ../deployment/www/ && find ../deployment/www/ -name '*.spec.ts' -type f -delete"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-validator": "^7.3.1",
    "multer": "^2.0.2",
    "sharp": "^0.34.5",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/adm-zip": "^0.5.7",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.2",
    "@types/socket.io": "^3.0.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.4.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  }
}
